{
  "name": "playbooks-tar",
  "version": "1.0.0",
  "description": "A simple git tarball CLI for Github repositories and subdirectories.",
  "license": "ISC",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "vite build --watch",
    "build": "vite build",
    "build:typescript": "tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier src",
    "format:fix": "prettier --write src",
    "clean": "npm run lint:fix && npm run format:fix",
    "docs:start": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/core": "^6.1.2",
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.2.0",
    "fstream": "^1.0.12",
    "ora": "^8.0.1",
    "sade": "^1.8.1",
    "unzip-stream": "^0.3.4",
    "vite-plugin-dts": "^3.9.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitejs/plugin-react": "^3.0.0",
    "dts-bundle-generator": "^7.1.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.7",
    "vite": "^4.0.0",
    "vitepress": "^1.0.0-alpha.75"
  }
}
